<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Licznik.Views.MainPage"
             xmlns:models="clr-namespace:Licznik.Models"
             xmlns:inputs="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.maui.Inputs"
             Title="Zbiór liczników"
             x:DataType="models:AllCounters">
    <HorizontalStackLayout>
        <VerticalStackLayout>
            <Button Text="Add" Command="{Binding AddCounterCommand}" Clicked="autoSave"/>
            <HorizontalStackLayout>
                <Label Text="Default value: "/>
                <Entry TextChanged="setDefaultValue" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
        <ListView ItemsSource="{Binding Counters}" WidthRequest="150">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Counter">
                    <ViewCell>
                        <VerticalStackLayout Margin="0,10,10,0">
                            <Entry Text="{Binding Name}" TextChanged="autoSave"></Entry>
                            <Picker SelectedItem="{Binding ColorName}" Title="Pick color">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>White</x:String>
                                        <x:String>Red</x:String>
                                        <x:String>Blue</x:String>
                                        <x:String>Yellow</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                            <Button Grid.Row="1" Grid.Column="1" Text="-" Command="{Binding DecrementCommand}" Clicked="autoSave"
                                Background="AliceBlue"/>
                            <Label Grid.Row="1" Grid.Column="2" Text="{Binding Value}" TextColor="{Binding Color}"/>
                                <Button Grid.Row="1" Grid.Column="3" Text="+" Command="{Binding IncrementCommand}" Clicked="autoSave"
                                Background="AliceBlue" WidthRequest="10" HeightRequest="10"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </HorizontalStackLayout>
</ContentPage>